# Cấu hình nhận diện khuôn mặt
# Tolerance: Ngưỡng distance để chấp nhận (càng cao càng dễ nhận diện)
# 0.6 = default, 0.5 = chặt, 0.7 = lỏng
FACE_RECOGNITION_TOLERANCE=0.55

# Confidence tối thiểu (0.0 - 1.0)
# Càng thấp càng dễ nhận diện
MIN_CONFIDENCE_THRESHOLD=0.50

# Bật/tắt preprocessing (true/false)
# Preprocessing có thể làm thay đổi ảnh, thử tắt nếu không nhận diện được
ENABLE_PREPROCESSING=false

# Model nhận diện: hog (nhanh) hoặc cnn (chính xác hơn nhưng cần GPU)
FACE_RECOGNITION_MODEL=hog

# Kích thước khuôn mặt tối thiểu (pixels)
MIN_FACE_SIZE=80

# Số lần upsample khi detect (1=nhanh, 2=chính xác hơn)
FACE_DETECTION_UPSAMPLE=1

# Ngôn ngữ
LANGUAGE=vi

# Voice settings
VOICE_ENERGY_THRESHOLD=450
VOICE_PHRASE_TIME_LIMIT=3
