# Cấu hình Lễ Tân AI

# Thời gian tối thiểu giữa các lần ghi log cho cùng một người (giây)
LOG_INTERVAL=30

# Ngôn ngữ mặc định (vi, en)
LANGUAGE=vi

# Cấu hình nhận diện khuôn mặt
# Giá trị dung sai cho nhận diện khuôn mặt (0.0-1.0, giá trị thấp hơn = nghiêm ngặt hơn)
FACE_RECOGNITION_TOLERANCE=0.6
# Mô hình nhận diện khuôn mặt ('hog' nhanh hơn, 'cnn' chính xác hơn nhưng yêu cầu GPU)
FACE_RECOGNITION_MODEL=hog




# Cấu hình giao diện người dùng
UI_WINDOW_NAME=LE TAN AI
UI_WINDOW_WIDTH=800
UI_WINDOW_HEIGHT=600

# Cấu hình hiệu suất
# FPS mục tiêu cho video (giá trị thấp hơn = mượt mà hơn, ít tải CPU hơn)
TARGET_FPS=60
# Khoảng thời gian giữa các lần nhận diện khuôn mặt (giây)
FACE_RECOGNITION_INTERVAL=2.0
# Khoảng thời gian giữa các lần xử lý giọng nói (giây)
VOICE_PROCESSING_INTERVAL=0.2

# Voice Recognition Settings
VOICE_CONFIDENCE_THRESHOLD=0.7
VOICE_ENERGY_THRESHOLD=300
VOICE_PAUSE_THRESHOLD=0.5
VOICE_PHRASE_TIME_LIMIT=3
VOICE_TIMEOUT=0.5

# Google Cloud Settings
# Path to your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=C:\path\to\your\service-account.json
# Your Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your-project-id
# Google Cloud region (asia-southeast1 is recommended for Vietnam)
GOOGLE_CLOUD_REGION=asia-southeast1
# Enable Google Cloud Voice Recognition (true/false)
USE_GOOGLE_CLOUD_VOICE=false